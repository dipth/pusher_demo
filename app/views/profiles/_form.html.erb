<%= simple_form_for @user, :url => profile_path, :wrapper => :inline do |f| %>
  <% if f.error_notification %>
    <div class="alert-message warning fade in" data-alert="alert">
      <a class="close" href="#">Ã—</a>
      <p><%= f.error_notification %></p>
    </div>
  <% end %>
  <%= f.input :username %>
  <%= f.input :password, :hint => "Fill this out if you wish to change your password" %>
  <div class="actions">
    <%= f.button :submit, :class => 'primary', :id => "commit" %>
  </div>
<% end %>
